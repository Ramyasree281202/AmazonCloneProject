<%- include('partials/header') %>

<div class="bglogin">
  <div class="container  mt-5">
   <center><div class="img-log">
    <img src="../public/Images/amazon_logo.png" width="150px" height="50px">
   </div></center> 
      
     
    
  
    <div class="row">
      <div class="col-sm-8 log">
        <div class="card">
          <div class="card-body">
  
            <!-- Makes POST request to /login route -->
            
            <form class="form-log flex" action="/login" name="submit" method="POST">
              <center><h1>Sign in</h1></center>
              <div class="form-group">
                <label for="email">Enter email or mobile number</label>
                <input  type="email" id="email" class="form-control font" name="email">
              </div>
              <div class="form-group">
                <label for="password">Enter password</label>
                <input type="password" id="password" class="form-control font" name="password">
              </div>
             <div class="btn-log">
              <button  type="submit" class="btn font" name="submit">Continue</button>
             </div>
             <center><p>New customer? <a style="text-decoration: none;" href="register">Start here.</a></p></center>
            </form>
  
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- <%- include('partials/footer') %> -->
</div>


